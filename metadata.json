    {
      "helpText": "BigQuery Dataset",
      "isOptional": true,
      "label": "BigQuery Dataset",
      "name": "bqDataset",
      "regexes": [".*"]
    },
    {
      "helpText": "BigQuery Table",
      "isOptional": true,
